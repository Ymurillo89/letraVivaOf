---
// Generamos las notas aleatoriamente en el servidor (Build time o SSR)
// Esto mantiene el HTML limpio y permite ajustar la cantidad fácilmente.
const noteCount = 25; // Cantidad de notas
const notes = Array.from({ length: noteCount }).map((_, i) => ({
  id: i,
  char: Math.random() > 0.5 ? "♪" : "♫", 
  left: Math.floor(Math.random() * 100) + "%", 
  delay: Math.random() * 15 + "s", 
  duration: Math.floor(Math.random() * 8 + 12) + "s", // Entre 12s y 20s
  size: Math.floor(Math.random() * 25 + 20) + "px", // Tamaño legible
  opacity: Math.random() * 0.6 + 0.2, // Un poco más visibles que antes
  // Reduje la probabilidad de blur para que se vean más nítidas
  blur: Math.random() > 0.8 ? "1px" : "0px", 
}));
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-[oklch(0.35_0.10_200)] via-[#00343d] to-[#00343d]">
	
	<div class="absolute inset-0 overflow-hidden pointer-events-none select-none">
		{notes.map((note) => (
			<div
				class="absolute animate-float text-white/80"
				style={{
					left: note.left,
					animationDelay: note.delay,
					animationDuration: note.duration,
					fontSize: note.size,
					opacity: note.opacity,
					filter: `blur(${note.blur})`,
                    bottom: '-50px', // Empiezan fuera de pantalla
				}}
			>
               <span class="block animate-sway">
                    {note.char}
                </span>
