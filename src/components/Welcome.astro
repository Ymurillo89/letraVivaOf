<style>
    /* Animación principal de subida */
	@keyframes floatUp {
		0% {
			transform: translateY(0) rotate(0deg);
			opacity: 0;
		}
		10% {
			opacity: var(--tw-opacity, 1); /* Usa la opacidad definida en JS */
		}
		90% {
			opacity: var(--tw-opacity, 1);
		}
		100% {
			transform: translateY(-110vh) rotate(20deg);
			opacity: 0;
		}
	}

    /* Animación secundaria de balanceo (izquierda/derecha) */
    @keyframes sway {
        0%, 100% { transform: translateX(-15px); }
        50% { transform: translateX(15px); }
    }

    /* Clase para subir */
	.animate-float {
		animation: floatUp linear infinite;
        /* will-change ayuda al rendimiento en móviles */
        will-change: transform, opacity; 
	}

    /* Clase para balancear el SVG interno independientemente de la subida */
    .animate-sway {
        animation: sway 3s ease-in-out infinite alternate;
    }

    /* Animación suave de entrada del texto principal */
    .animate-fade-in-up {
        animation: fadeInUp 1s ease-out forwards;
        opacity: 0;
    }

    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>