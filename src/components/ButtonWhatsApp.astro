---
// WhatsAppFloat.astro
const whatsappNumber = "573243798334"; // Cambia por tu número
const message = "¿Cómo puedo crear mi canción personalizada?";
---

<!-- Popup del chat -->
<div id="whatsapp-chat" class="fixed bottom-24 right-4 md:right-6 w-80 bg-white rounded-lg shadow-2xl z-50 overflow-hidden hidden">
  <!-- Header -->
  <div class="bg-teal-700 text-white p-4 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center">
        <span class="text-teal-700 font-bold">LV</span>
      </div>
      <div>
        <h3 class="font-semibold">Celeste | Letra Viva</h3>
        <p class="text-xs text-teal-100">En línea</p>
      </div>
    </div>
    <button id="close-chat"
      class="text-white hover:bg-teal-600 rounded p-1 transition-colors cursor-pointer"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </div>

  <!-- Body -->
  <div class="p-4 bg-gray-50">
    <div class="bg-white rounded-lg p-3 shadow-sm mb-3">
      <p class="text-sm text-gray-700">
        Hola 👋 ¿Te ayudo con tu canción?
      </p>
    </div>
  </div>

  <!-- Footer con botones -->
  <div class="p-4 space-y-2">
    <a
      href={`https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`}
      target="_blank"
      rel="noopener noreferrer"
      class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-3 rounded-lg transition-colors flex items-center justify-center gap-2"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
      </svg>
      Ir a WhatsApp
    </a>
    <button
      id="close-chat-btn"
      class="w-full bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-3 rounded-lg transition-colors cursor-pointer"
    >
      Cerrar Chat
    </button>
  </div>
</div>

<!-- Botón flotante de WhatsApp -->
<button
  id="whatsapp-button"
  class="fixed cursor-pointer bottom-6 right-4 md:right-6 w-14 h-14 bg-green-500 hover:bg-green-600 rounded-full shadow-lg flex items-center justify-center transition-all hover:scale-110 z-50"
>
  <!-- Badge de notificación -->
  <div id="notification-badge" class="absolute -top-1 -right-1 w-6 h-6 bg-red-500 rounded-full flex items-center justify-center opacity-0 transition-opacity duration-300">
    <span class="text-white text-xs font-bold">1</span>
  </div>

  <!-- Ícono de WhatsApp -->
  <svg
    class="w-8 h-8 text-white relative z-10"
    fill="currentColor"
    viewBox="0 0 24 24"
  >
    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
  </svg>

  <!-- Animación de pulso (inicialmente oculta) -->
  <div id="pulse-animation" class="absolute inset-0 rounded-full bg-green-400 opacity-0"></div>
</button>

<style>
  @keyframes ping {
    75%, 100% {
      transform: scale(1.5);
      opacity: 0;
    }
  }
  
  .animate-ping {
    animation: ping 2s cubic-bezier(0, 0, 0.2, 1) infinite;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const whatsappButton = document.getElementById('whatsapp-button');
    const whatsappChat = document.getElementById('whatsapp-chat');
    const closeChat = document.getElementById('close-chat');
    const closeChatBtn = document.getElementById('close-chat-btn');
    const notificationBadge = document.getElementById('notification-badge');
    const pulseAnimation = document.getElementById('pulse-animation');

    // Iniciar animación después de 20 segundos
    setTimeout(() => {
      if (notificationBadge && pulseAnimation) {
        notificationBadge.classList.remove('opacity-0');
        notificationBadge.classList.add('opacity-100');
        pulseAnimation.classList.add('animate-ping', 'opacity-75');
      }
    }, 20000); // 20 segundos

    // Función para ocultar la notificación
    const hideNotification = () => {
      if (notificationBadge && pulseAnimation) {
        notificationBadge.classList.remove('opacity-100');
        notificationBadge.classList.add('opacity-0');
        pulseAnimation.classList.remove('animate-ping', 'opacity-75');
      }
    };

    // Abrir/cerrar chat
    whatsappButton?.addEventListener('click', () => {
      const isHidden = whatsappChat?.classList.contains('hidden');
      whatsappChat?.classList.toggle('hidden');
      
      // Si se abre el chat, ocultar la notificación
      if (isHidden) {
        hideNotification();
      }
    });

    // Cerrar chat con X
    closeChat?.addEventListener('click', () => {
      whatsappChat?.classList.add('hidden');
    });

    // Cerrar chat con botón
    closeChatBtn?.addEventListener('click', () => {
      whatsappChat?.classList.add('hidden');
    });
  });
</script>