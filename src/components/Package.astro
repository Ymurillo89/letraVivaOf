---
import { fetchProductVariants } from '../lib/shopify.server.ts';

const variants = await fetchProductVariants('8847688794261');

// Funci√≥n para extraer info del t√≠tulo
function parseVariantInfo(title: string) {
  const match = title.match(/^(.*?)\s*‚Äì\s*(.*?)\s*\|/);
  const name = match ? match[1].trim() : title;
  const subtitle = match ? match[2].trim() : '';
  
  const durationMatch = title.match(/\(([^)]+min)\)/);
  const duration = durationMatch ? durationMatch[1] : '';
  
  return { name, subtitle, duration };
}

function formatPrice(price: string) {
  return new Intl.NumberFormat('es-CO').format(parseFloat(price));
}

// Obtener features del t√≠tulo
function getFeatures(title: string) {
  const features = [];
  if (title.includes('MP3')) features.push('Canci√≥n en MP3');
  if (title.includes('Tarjeta Digital')) features.push('Tarjeta Digital');
  if (title.includes('Video')) features.push('Video Lyric Animado');
  return features;
}
