        font-size: 20px;
        font-weight: bold;
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.5);
        animation: checkmark 0.3s ease-out;
    }
    
    @keyframes checkmark {
        0% {
            transform: scale(0) rotate(-180deg);
        }
        50% {
            transform: scale(1.2) rotate(10deg);
        }
        100% {
