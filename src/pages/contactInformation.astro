---
import ButtonWhatsApp from "@/components/ButtonWhatsApp.astro";
import Footer from "@/components/Footer.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout>
    <div class="container mx-auto px-4 py-12 max-w-4xl">
        <div class="text-center mb-12">
            <div
                class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-[#11676a] to-[#2d8c89] rounded-full mb-4"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-message-circle w-8 h-8 text-white"
                    ><path d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z"></path></svg>
            </div><h1 class="text-4xl font-bold text-gray-900 mb-3">
                Información de Contacto
            </h1><p class="text-lg text-gray-600 max-w-2xl mx-auto">
                Estamos aquí para ayudarte. Contacta con Letra Viva por
                cualquier consulta o duda sobre tu canción personalizada.
            </p>
        </div>
        <div>
            <div data-slot="card-content" class="px-6 space-y-8 py-8">
                <section>
                    <div class="flex items-start gap-3 mb-4">
                        <div
                            class="w-10 h-10 rounded-lg bg-teal-100 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="lucide lucide-globe w-5 h-5 text-teal-600"
                                ><circle cx="12" cy="12" r="10"></circle><path
                                    d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"
                                ></path><path d="M2 12h20"></path></svg>
                        </div><div>
                            <h2 class="text-2xl font-semibold text-gray-900">
                                Nombre Comercial
                            </h2>
                        </div>
                    </div><p
                        class="text-gray-700 leading-relaxed text-xl font-medium"
                    >
                        Letra Viva
                    </p>
                </section><div
                    data-orientation="horizontal"
                    role="none"
                    data-slot="separator"
                    class="shrink-0 data-[orientation=horizontal]:h-px data-[orientation=horizontal]:w-full data-[orientation=vertical]:h-full data-[orientation=vertical]:w-px bg-teal-100"
                >
                </div><section>
                    <div class="flex items-start gap-3 mb-4">
                        <div
                            class="w-10 h-10 rounded-lg bg-cyan-100 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="lucide lucide-phone w-5 h-5 text-cyan-600"
                                ><path
                                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                                ></path></svg>
                        </div><div>
                            <h2 class="text-2xl font-semibold text-gray-900">
                                Número de Teléfono
                            </h2>
                        </div>
                    </div><div
                        class="bg-cyan-50 border-l-4 border-cyan-500 p-4 rounded-r-lg"
                    >
                        <a
                            href="tel:+573044748461"
                            class="text-gray-800 font-medium text-lg hover:text-cyan-600 transition-colors inline-flex items-center gap-2"
                            ><svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="lucide lucide-phone w-5 h-5"
                                ><path
                                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                                ></path></svg
                            >+57 304 474 8461</a
                        ><p class="text-gray-600 text-sm mt-2">
                            Puedes contactarnos vía WhatsApp o llamada
                            telefónica
                        </p>
                    </div>
                </section><div
                    data-orientation="horizontal"
                    role="none"
                    data-slot="separator"
                    class="shrink-0 data-[orientation=horizontal]:h-px data-[orientation=horizontal]:w-full data-[orientation=vertical]:h-full data-[orientation=vertical]:w-px bg-teal-100"
                >
                </div><section>
                    <div class="flex items-start gap-3 mb-4">
                        <div
                            class="w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="lucide lucide-mail w-5 h-5 text-blue-600"
                                ><rect width="20" height="16" x="2" y="4" rx="2"
                                ></rect><path
                                    d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                                ></path></svg>
                        </div><div>
                            <h2 class="text-2xl font-semibold text-gray-900">
                                Correo Electrónico
                            </h2>
                        </div>
                    </div><div
                        class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-r-lg"
                    >
                        <a
                            href="mailto:contactoletraviva@gmail.com"
                            class="text-gray-800 font-medium text-lg hover:text-blue-600 transition-colors inline-flex items-center gap-2"
                            ><svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="lucide lucide-mail w-5 h-5"
                                ><rect width="20" height="16" x="2" y="4" rx="2"
                                ></rect><path
                                    d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                                ></path></svg
                            >contactoletraviva@gmail.com</a
                        ><p class="text-gray-600 text-sm mt-2">
                            Responderemos tu correo en un plazo de 24 horas
                            hábiles
                        </p>
                    </div>
                </section><div
                    data-orientation="horizontal"
                    role="none"
                    data-slot="separator"
                    class="shrink-0 data-[orientation=horizontal]:h-px data-[orientation=horizontal]:w-full data-[orientation=vertical]:h-full data-[orientation=vertical]:w-px bg-teal-100"
                >
                </div><section>
                    <div class="flex items-start gap-3 mb-4">
                        <div
                            class="w-10 h-10 rounded-lg bg-green-100 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="lucide lucide-map-pin w-5 h-5 text-green-600"
                                ><path
                                    d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                                ></path><circle cx="12" cy="10" r="3"
                                ></circle></svg>
                        </div><div>
                            <h2 class="text-2xl font-semibold text-gray-900">
                                Dirección Física
                            </h2>
                        </div>
                    </div><div
                        class="bg-green-50 border-l-4 border-green-500 p-4 rounded-r-lg"
                    >
                        <div class="flex items-start gap-2">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="lucide lucide-map-pin w-5 h-5 text-green-600 flex-shrink-0 mt-0.5"
                                ><path
                                    d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                                ></path><circle cx="12" cy="10" r="3"
                                ></circle></svg
                            ><div>
                                <p class="text-gray-800 font-medium">
                                    Cra. 99 #65-265, T3 APTO 405
                                </p><p class="text-gray-700">
                                    050047 Medellín ANT
                                </p><p class="text-gray-700">Colombia</p>
                            </div>
                        </div>
                    </div>
                </section><div
                    data-orientation="horizontal"
                    role="none"
                    data-slot="separator"
                    class="shrink-0 data-[orientation=horizontal]:h-px data-[orientation=horizontal]:w-full data-[orientation=vertical]:h-full data-[orientation=vertical]:w-px bg-teal-100"
                >
                </div><section>
                    <div class="flex items-start gap-3 mb-4">
                        <div
                            class="w-10 h-10 rounded-lg bg-violet-100 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="lucide lucide-clock w-5 h-5 text-violet-600"
                                ><circle cx="12" cy="12" r="10"
                                ></circle><polyline points="12 6 12 12 16 14"
                                ></polyline></svg>
                        </div><div>
                            <h2 class="text-2xl font-semibold text-gray-900">
                                Horario de Atención
                            </h2>
                        </div>
                    </div><div class="space-y-3">
                        <div
                            class="bg-violet-50 border-l-4 border-violet-500 p-4 rounded-r-lg"
                        >
                            <p class="text-gray-800 font-medium mb-2">
                                Lunes a Viernes
                            </p><p class="text-gray-700">
                                9:00 AM - 6:00 PM (Hora Colombia)
                            </p>
                        </div><div
                            class="bg-indigo-50 border-l-4 border-indigo-500 p-4 rounded-r-lg"
                        >
                            <p class="text-gray-800 font-medium mb-2">
                                Sábados
                            </p><p class="text-gray-700">
                                10:00 AM - 2:00 PM (Hora Colombia)
                            </p>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
	<ButtonWhatsApp/>
	<Footer />
</Layout>
